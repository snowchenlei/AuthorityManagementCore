@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <environment include="Development">
        <link href="~/lib/zTree.v3/css/metroStyle/metroStyle.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/bundle/page.table.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    @RenderSection("styles", required: false)
}

<div class="row">
    <div class="col-2">
        <ul id="navTree" class="ztree"></ul>
    </div>
    <div class="col-10">
        @RenderBody()
        <table id="tb-body" data-bind="bootstrapTable :$root" data-filter-control="true"></table>
    </div>
</div>
@section scripts
{
    <environment include="Development">
        <!--ztree-->
        <script src="~/lib/zTree.v3/js/jquery.ztree.all.min.js" asp-append-version="true"></script>
        <!-- bootstrap-table -->
