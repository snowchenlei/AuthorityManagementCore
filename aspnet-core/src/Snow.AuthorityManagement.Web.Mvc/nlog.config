<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File" name="allfile" fileName="c:\temp\nlog-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File" name="ownFile-web" fileName="c:\temp\nlog-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

    <target xsi:type="File"
            name="RollingFileInfo"
            archiveAboveSize="10240"
            fileName="${basedir}/App_Data/Info/${date:format=yyyyMM}/${date:format=dd}/logs_${shortdate}.log"
            layout="【时间】：${longdate}${newline}【级别】：${uppercase:${level}}${newline}【类名】：${logger}${newline}【日志内容】：${message}${newline}" />
    <!--TODO:连接字符串使用配置文件-->
    <target xsi:type="Database"
            name="RollingSqlInfo"
            connectionString="DataSource=AuthCore.db;"
            dbProvider="System.Data.SQLite.SQLiteConnection, System.Data.SQLite"
            commandText="INSERT INTO AuditLog (UserId, ServiceName, MethodName, Parameters, ReturnValue, ExecutionTime, ExecutionDuration, ClientIpAddress, ClientName, BrowserInfo, Exception, CustomData)
              VALUES (@userId, @serviceName, @methodName, @parameters, @returnValue, @executionTime, @executionDuration, @clientIpAddress, @clientName, @browserInfo, @exception, @customData)">
      <parameter name="@userId" layout="${event-properties:item=userId}" />
      <parameter name="@serviceName" layout="${mdlc:item=serviceName}" />
      <parameter name="@methodName" layout="${mdlc:item=methodName}" />
      <parameter name="@parameters" layout="${mdlc:item=parameters}" />
      <parameter name="@returnValue" layout="${mdlc:item=returnValue}" />
      <parameter name="@executionTime" layout="${mdlc:item=executionTime}" />
      <parameter name="@executionDuration" layout="${mdlc:item=executionDuration}" />
      <parameter name="@clientIpAddress" layout="${mdlc:item=clientIpAddress}" />
      <parameter name="@clientName" layout="${mdlc:item=clientName}" />
      <parameter name="@browserInfo" layout="${mdlc:item=browserInfo}" />
      <parameter name="@exception" layout="${exception:format=tostring}" />
      <parameter name="@customData" layout="${mdlc:item=customData}" />
    </target>
    <target xsi:type="File"
              name="RollingFileError"
              archiveAboveSize="10240"
              fileName="${basedir}/App_Data/Info/${date:format=yyyyMM}/${date:format=dd}/logs_${shortdate}.log"
              layout="【时间】：${longdate}${newline}【级别】：${uppercase:${level}}${newline}【类名】：${logger}${newline}【日志内容】：${message}${newline}【异常信息】：${exception:format=tostring}${newline}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <!--<logger name="*" minlevel="Trace" writeTo="allfile" />-->

    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <!-- BlackHole without writeTo -->
    <!--<logger name="*" minlevel="Trace" writeTo="ownFile-web" />-->
    <logger name="*" level="Info" writeTo="RollingFileInfo,RollingSqlInfo" />
    <logger name="*" level="Error" writeTo="RollingFileError" />
  </rules>
</nlog>