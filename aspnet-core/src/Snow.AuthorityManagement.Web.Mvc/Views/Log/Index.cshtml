@{
    ViewBag.Title = "日志管理";
    Layout = "~/Views/Shared/_LayoutPageTable.cshtml";
}
@section Styles
{
    <environment include="Development">
        <!--select2-->
        <link href="~/lib/select2/css/select2.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.css" rel="stylesheet" asp-append-version="true" />
        <!--daterangepicker-->
        <link href="~/lib/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <!--select2-->
        <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" asp-append-version="true" />
        <!--daterangepicker-->
        <link href="~/lib/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
<!--搜索-->
<div class="card">
    <div class="card-header">
        查询条件
    </div>
    <div class="card-body">
        <div id="formSearch" class="form-row">
            <div class="form-group col-md-2">
                <label class="sr-only" for="txt_sel_level">级别</label>
                <input asp-items="ViewBag.LogLevel" type="text" class="form-control" id="txt_sel_level" placeholder="级别">
            </div>
            <div class="form-group col-md-3">
                <label class="sr-only" for="txt_search_addTime">添加时间</label>
                <input type="text" class="form-control" id="txt_search_addTime" placeholder="添加时间">
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <environment include="Development">
        <!--select2-->
        <script src="~/lib/select2/js/select2.full.js" asp-append-version="true"></script>
        <script src="~/lib/select2/js/i18n/zh-CN.js" asp-append-version="true"></script>
        <!-- daterangepicker -->
        <script src="~/lib/bootstrap-daterangepicker/moment.min.js"></script>
        <script src="~/lib/bootstrap-daterangepicker/daterangepicker.min.js"></script>
        <script src="~/js/timeBucket.js" asp-append-version="true"></script>
        <script src="~/view-resources/log/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <!--select2-->
        <script src="~/lib/select2/js/select2.full.min.js" asp-append-version="true"></script>
        <script src="~/lib/select2/js/i18n/zh-CN.js" asp-append-version="true"></script>
        <!-- daterangepicker -->
        <script src="~/lib/bootstrap-daterangepicker/moment.min.js"></script>
        <script src="~/lib/bootstrap-daterangepicker/daterangepicker.min.js"></script>
        <script src="~/js/timeBucket.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/log/index.min.js" asp-append-version="true"></script>
    </environment>
}