@{
    ViewData["Title"] = "角色管理";
    Layout = "~/Views/Shared/_LayoutPageTable.cshtml";
}

<!--搜索-->
<div class="panel-group" id="accordion">
    <div class="panel panel-info">
        <div class="panel-heading">
            <span style="font-size:16px;">查询条件</span>
            <span class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#searchPanel" style="float: right;">
                    <i id="searchTitle" class="glyphicon glyphicon-menu-up"></i>
                </a>
            </span>
        </div>
        <div id="searchPanel" class="panel-collapse collapse in">
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-1" for="txt_search_name">角色名</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" id="txt_search_name">
                        </div>
                        <label class="col-md-1 control-label" for="txt_search_addTime" style="float: left;">添加时间</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txt_search_addTime">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/timeBucket.js"></script>
    <script src="~/js/role/index.js"></script>
}