@{

    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_LayoutPageTable.cshtml";
}
@section Styles
{
    <environment include="Development">
        <link href="~/lib/icheck-bootstrap/icheck-bootstrap.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
<div id="toolbar">
    <div class="btn-group" role="group" aria-label="Operate Group">
        <button id="create" type="button" class="btn btn-primary"><i class="fas fa-plus"></i>添加</button>
    </div>
</div>
<!--搜索-->
<div class="card">
    <div class="card-header">
        查询条件
    </div>
    <div class="card-body">
        <form id="formSearch" class="form-inline">
            <label class="sr-only" for="txt_search_userName">用户名</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="txt_search_userName" placeholder="用户名">
            <label class="sr-only" for="txt_search_addTime">添加时间</label>
            <input type="text" class="form-control mb-2 mr-sm-2 col-md-3" id="txt_search_addTime" placeholder="添加时间">
        </form>
    </div>
</div>
@section Scripts
{
    <environment include="Development">
        <!-- daterangepicker -->
        <script src="~/lib/bootstrap-daterangepicker/moment.min.js"></script>
        <script src="~/lib/bootstrap-daterangepicker/daterangepicker.min.js"></script>
        <script src="~/js/timeBucket.js" asp-append-version="true"></script>
        <script src="~/view-resources/user/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/bundle/user.index.min.js" asp-append-version="true"></script>
    </environment>
}