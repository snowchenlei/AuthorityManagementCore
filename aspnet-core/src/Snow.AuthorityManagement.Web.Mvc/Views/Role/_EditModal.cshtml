@model Snow.AuthorityManagement.Web.Models.Roles.CreateOrEditRoleModalViewModel;
<link href="~/lib/zTree.v3/css/metroStyle/metroStyle.css" rel="stylesheet" asp-append-version="true" />

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a href="#UserInformationsTab" class="nav-link active" data-toggle="tab" role="tab">
            角色信息
        </a>
    </li>
    <li class="nav-item">
        <a href="#RolesTab" data-toggle="tab" role="tab" class="nav-link">
            权限 @*<b class="badge badge-primary"><span id="assigned-role-count">@Model.AssignedRoleCount</span></b>*@
        </a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="UserInformationsTab" role="tabpanel">
        <form id="modelForm" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="modal-body form-horizontal" id="modify">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Role.ID" />
                <div class="form-group">
                    <label asp-for="Role.Name" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Role.Name" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Role.Name)" />
                        <span asp-validation-for="Role.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Role.DisplayName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Role.DisplayName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Role.DisplayName)" />
                        <span asp-validation-for="Role.DisplayName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Role.Sort" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Role.Sort" type="number" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Role.Sort)" />
                        <span asp-validation-for="Role.Sort" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="tab-pane" id="RolesTab" role="tabpanel">
        <ul id="authTree" class="ztree"></ul>
    </div>
</div>
<!-- zTree -->
<environment include="Development">
    <script src="~/lib/zTree.v3/js/jquery.ztree.core.min.js" asp-append-version="true"></script>
    <script src="~/lib/zTree.v3/js/jquery.ztree.excheck.min.js" asp-append-version="true"></script>
    <script src="~/lib/zTree.v3/js/jquery.ztree.exedit.min.js" asp-append-version="true"></script>
    <script src="~/view-resources/role/edit.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/zTree.v3/js/jquery.ztree.core.min.js" asp-append-version="true"></script>
    <script src="~/lib/zTree.v3/js/jquery.ztree.excheck.min.js" asp-append-version="true"></script>
    <script src="~/lib/zTree.v3/js/jquery.ztree.exedit.min.js" asp-append-version="true"></script>
    <script src="~/view-resources/role/edit.min.js" asp-append-version="true"></script>
</environment>
<script type="text/javascript">
        var zNodes = @Html.Raw(Model.Permission);
</script>